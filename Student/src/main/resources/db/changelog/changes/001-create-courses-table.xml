<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="001" author="developer">
        <createTable tableName="courses">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="duration" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="schedule_time" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="instructor" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="available_seats" type="INT" defaultValue="0">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Indexing for optimized queries -->
    <changeSet id="002" author="developer">
        <createIndex indexName="idx_courses_name" tableName="courses">
            <column name="name"/>
        </createIndex>
        <createIndex indexName="idx_courses_instructor" tableName="courses">
            <column name="instructor"/>
        </createIndex>
        <createIndex indexName="idx_courses_schedule_time" tableName="courses">
            <column name="schedule_time"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>