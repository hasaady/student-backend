<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="002" author="developer">
        <createTable tableName="course_registrations">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="course_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="student_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Adding Indexes for better query performance -->
    <changeSet id="003" author="developer">
        <createIndex indexName="idx_course_registrations_course_id" tableName="course_registrations">
            <column name="course_id"/>
        </createIndex>
        <createIndex indexName="idx_course_registrations_student_id" tableName="course_registrations">
            <column name="student_id"/>
        </createIndex>
    </changeSet>

    <!-- Adding Foreign Key Constraints -->
    <changeSet id="004" author="developer">
        <addForeignKeyConstraint
                baseTableName="course_registrations" baseColumnNames="course_id"
                referencedTableName="courses" referencedColumnNames="id"
                constraintName="fk_course_registrations_course"/>

        <addForeignKeyConstraint
                baseTableName="course_registrations" baseColumnNames="student_id"
                referencedTableName="students" referencedColumnNames="id"
                constraintName="fk_course_registrations_student"/>
    </changeSet>

</databaseChangeLog>